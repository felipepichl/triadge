model User {
  id          String  @id @default(uuid())
  name        String
  email       String? @unique
  password    String?
  phoneNumber String
  avatar      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  UsersTokens UserTokens[]
}

model UserTokens {
  id           String   @id @default(uuid())
  refreshToken String
  expiresDate  DateTime

  users  User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
